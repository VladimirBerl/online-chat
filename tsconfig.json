{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "declaration": true,
    "lib": ["DOM", "ESNext", "DOM.Iterable"]
  },
  "exclude": ["./node_modules", "./dist"],
  "include": ["./src/**/*.ts", "./declaration.d.ts"]
}
